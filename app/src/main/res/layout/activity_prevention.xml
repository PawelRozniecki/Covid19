<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5FF"
    tools:context=".PreventionActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#ffffff"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Prevention"
            android:textColor="#5C75CB"
            android:textSize="30dp" />
    </androidx.cardview.widget.CardView>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="60dp"
       android:orientation="vertical"
       android:layout_height="match_parent">

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:backgroundTint="#FDF7FF">

           <ImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_gravity="left|center"
               android:background="@drawable/ic_washhands"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#5C75CB"
               android:text="Wash your hands often"
               android:fontFamily="@font/balsamic"
               android:textSize="25dp"
               android:layout_gravity="center"/>


       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="100dp" android:layout_marginBottom="20dp">
           <ImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_gravity="left|center"
               android:layout_marginLeft="10dp"
               android:background="@drawable/ic_closecontact"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#5C75CB"
               android:text="Avoid close contact"
               android:fontFamily="@font/balsamic"
               android:textSize="25dp"
               android:layout_gravity="center"/>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_marginBottom="20dp"

           android:backgroundTint="#FDF7FF">
           <ImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_gravity="left|center"
               android:layout_marginLeft="10dp"
               android:background="@drawable/ic_cover"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right|center"
               android:fontFamily="@font/balsamic"
               android:text=" Cover your mouth and nose\n
when around others"

               android:textAlignment="center"
               android:textColor="#5C75CB"
               android:textSize="25dp" />

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="100dp" android:layout_marginBottom="20dp">
           <ImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_gravity="left|center"
               android:layout_marginLeft="10dp"
               android:background="@drawable/ic_coughsneeze"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#5C75CB"
               android:text=" cough and sneeze\ninto your elbow"
               android:fontFamily="@font/balsamic"
               android:textSize="25dp"
               android:textAlignment="center"
               android:layout_gravity="center"/>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="100dp"

           android:layout_marginBottom="20dp"
           android:backgroundTint="#FDF7FF">

           <ImageView
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_gravity="left|center"
               android:layout_marginLeft="10dp"
               android:background="@drawable/ic_disinfect"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#5C75CB"
               android:text=" clean and disinfect\neverything"
               android:fontFamily="@font/balsamic"
               android:textSize="25dp"
               android:textAlignment="center"
               android:layout_gravity="center"/>

       </androidx.cardview.widget.CardView>

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>