<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F4F5"
       >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#5C75CB"
        android:elevation="16dp"


        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/symptomBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/balsamic"
            android:text=" What to do if\n you are sick?"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="78dp"
            android:layout_height="134dp"
            android:layout_margin="2dp"

            android:background="@drawable/ic_cough" />

        <Button
            android:id="@+id/dialog_btn"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/learnmore_btn"
            android:fontFamily="@font/balsamic"
            android:text="learn more"
            android:textColor="#ffffff"
            android:textSize="10dp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/newsBtn"
        android:layout_width="300dp"
        android:layout_height="64dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/btnnews"
        android:elevation="5dp"
        android:fontFamily="@font/balsamic"
        android:text="Cases &amp; Updates"
        android:textColor="#5C75CB"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapBtn"
        app:layout_constraintVertical_bias="0.012" />

    <Button
        android:id="@+id/symptomBtn"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/button_symptoms"
        android:elevation="5dp"
        android:fontFamily="@font/balsamic"
        android:text="symptoms"
        android:textColor="#5C75CB"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/preventionBtn"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"

        android:background="@drawable/round_button"
        android:elevation="5dp"
        android:fontFamily="@font/balsamic"
        android:text="Prevention"
        android:textColor="#5C75CB"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symptomBtn" />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="300dp"
        android:layout_height="64dp"

        android:layout_marginTop="24dp"
        android:background="@drawable/btn_med_services"
        android:elevation="5dp"
        android:fontFamily="@font/balsamic"
        android:text="Medical services"
        android:textColor="#5C75CB"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preventionBtn">


    </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>